# ===========================================
# CONFIGURAÇÕES DE PRODUÇÃO - PANDORA STORE
# ===========================================
# ⚠️ IMPORTANTE: Substitua os valores pelos seus dados reais de produção

# Aplicação
APP_NAME="Pandora Store"
APP_ENV=production
APP_KEY=base64:VCRI0wvWoVltb22XQqF7s3OuFuLVXHMG4MKOyUCjpcM=
APP_DEBUG=false
APP_URL=https://seudominio.com

# Localização
APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=pt_BR
APP_FAKER_LOCALE=pt_BR

# Manutenção
APP_MAINTENANCE_DRIVER=file

# PHP
PHP_CLI_SERVER_WORKERS=4

# Criptografia
BCRYPT_ROUNDS=12

# Logs
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Banco de Dados (PRODUÇÃO)
DB_CONNECTION=mysql
DB_HOST=seu_host_de_producao
DB_PORT=3306
DB_DATABASE=pandora_production
DB_USERNAME=usuario_producao
DB_PASSWORD=senha_forte_producao

# Sessões
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=seudominio.com

# Broadcast
BROADCAST_CONNECTION=log

# Arquivos
FILESYSTEM_DISK=local

# Filas
QUEUE_CONNECTION=redis

# Cache
CACHE_STORE=redis

# Memcached
MEMCACHED_HOST=127.0.0.1

# Redis
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Email (CONFIGURAR SMTP REAL)
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=seu_smtp_host
MAIL_PORT=587
MAIL_USERNAME=seu_email@seudominio.com
MAIL_PASSWORD=sua_senha_email
MAIL_FROM_ADDRESS=noreply@seudominio.com
MAIL_FROM_NAME="${APP_NAME}"

# AWS (se usar S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite
VITE_APP_NAME="${APP_NAME}"

# Stripe (CONFIGURAR COM SUAS CREDENCIAIS DE PRODUÇÃO)
STRIPE_KEY=pk_live_SEU_STRIPE_PUBLISHABLE_KEY_AQUI
STRIPE_SECRET=sk_live_SEU_STRIPE_SECRET_KEY_AQUI
STRIPE_WEBHOOK_SECRET=whsec_SEU_STRIPE_WEBHOOK_SECRET_AQUI

# PayPal (OBTER CREDENCIAIS DE PRODUÇÃO)
PAYPAL_CLIENT_ID=SEU_CLIENT_ID_DE_PRODUCAO
PAYPAL_CLIENT_SECRET=SEU_CLIENT_SECRET_DE_PRODUCAO
PAYPAL_ENVIRONMENT=production
PAYPAL_WEBHOOK_SECRET=SEU_WEBHOOK_SECRET_DE_PRODUCAO

# ===========================================
# INSTRUÇÕES:
# ===========================================
# 1. Renomeie este arquivo para .env
# 2. Substitua todos os valores marcados com "SEU_"
# 3. Configure seu servidor de produção
# 4. Execute: php artisan config:cache
# 5. Execute: php artisan migrate --force
# ===========================================
